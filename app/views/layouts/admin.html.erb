<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %> | KnockOn</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="admin">
    <header class="navbar navbar-default navbar-fixed-bottom navbar-material-green" role="navigation">
      <div class="container">
        <div class="navbar-header navbar-right">
          <%= link_to 'KnockOn', root_path, { class: 'navbar-brand', 'data-toggle' => 'tooltip', 'data-placement' => 'top', 'title' => 'Go to welcome page' } %>
        </div>
        <ul class="nav navbar-nav">
          <li>
            <%= link_to logout_path, { 'data-toggle' => 'tooltip', 'data-placement' => 'top', 'title' => 'logout' } do %>
              <i class="glyphicon glyphicon-log-out"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </header>
    <div class="container main">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:alert] %>
        </div>
      <% end %>
      <h1 class="page-header"><%= @title %></h1>
      <%= yield %>
    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </body>
</html>
